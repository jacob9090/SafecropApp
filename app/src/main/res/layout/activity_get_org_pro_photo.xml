<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".organic.orgpro.GetOrgProPhotoActivity">

    <ImageView
        android:id="@+id/orgProschImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:padding="20dp"
        android:src="@drawable/camera_brown"
        android:background="@android:color/darker_gray"
        android:contentDescription="Selected or Captured Image" />

    <Button
        android:id="@+id/orgProschBtnCaptureOrSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture or Select Image"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/orgProschBtnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="16dp" />

</LinearLayout>